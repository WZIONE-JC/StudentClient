<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/today_course"
        android:orientation="vertical"
        android:background="@drawable/background">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:text="今日课程"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="@color/deep_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="time"
                android:textSize="18sp"
                android:gravity="center"
                android:id="@+id/today_course_1_time"
                android:layout_height="match_parent"
                android:textColor="@color/deep_gray"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:text="course_name"
                android:gravity="center"
                android:id="@+id/today_course_1_name"
                android:layout_height="match_parent"
                android:textColor="@color/deep_gray"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="place"
                android:textSize="18sp"
                android:gravity="center"
                android:id="@+id/today_course_1_place"
                android:layout_height="match_parent"
                android:textColor="@color/deep_gray"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="time"
                android:textSize="18sp"
                android:id="@+id/today_course_2_time"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/deep_gray"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="course_name"
                android:textSize="18sp"
                android:id="@+id/today_course_2_name"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/deep_gray"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="place"
                android:textSize="18sp"
                android:id="@+id/today_course_2_place"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/deep_gray"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="time"
                android:textSize="18sp"
                android:id="@+id/today_course_3_time"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/deep_gray"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="course_name"
                android:textSize="18sp"
                android:id="@+id/today_course_3_name"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/deep_gray"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/today_course_3_place"
                android:layout_height="match_parent"
                android:text="place"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/deep_gray"/>

        </LinearLayout>
        <Button
            android:id="@+id/more_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:background="@null"
            android:text="more >"
            android:textAllCaps="false"
            android:textColor="@color/color_1296db"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_margin="5dp"
            android:id="@+id/my_classroom"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:orientation="vertical"
            android:background="@drawable/circle_background">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_classroom_1"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:text="我的课堂"
                android:textSize="18sp"
                android:textColor="@color/color_1296db"
                android:gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/join_classroom"
            android:layout_margin="5dp"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:orientation="vertical"
            android:background="@drawable/circle_background">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_create_classroom"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/color_1296db"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:text="加入课堂"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>